{
  "name": "invoiceapp",
  "type": "flogo:app",
  "version": "0.0.1",
  "appModel": "1.0.0",
  "triggers": [
    {
      "id": "receive_http_message",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/trigger/rest",
      "name": "Receive HTTP Message",
      "description": "Simple REST Trigger",
      "settings": {
        "port": "$env[HTTPPORT]"
      },
      "handlers": [
        {
          "action": {
            "ref": "github.com/TIBCOSoftware/flogo-contrib/action/flow",
            "data": {
              "flowURI": "res://flow:invoice"
            },
            "mappings": {
              "input": [
                {
                  "mapTo": "id",
                  "type": "assign",
                  "value": "$.pathParams.id"
                }
              ],
              "output": [
                {
                  "mapTo": "data",
                  "type": "assign",
                  "value": "$.response"
                }
              ]
            }
          },
          "settings": {
            "method": "GET",
            "path": "/api/invoices/:id"
          }
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "flow:invoice",
      "data": {
        "name": "Invoice",
        "metadata": {
          "input": [
            {
              "name": "id",
              "type": "string"
            }
          ],
          "output": [
            {
              "name": "response",
              "type": "any"
            }
          ]
        },
        "tasks": [
          {
            "id": "log_2",
            "name": "Log Message",
            "description": "Simple Log Activity",
            "activity": {
              "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
              "input": {
                "message": "",
                "flowInfo": "false",
                "addToFlow": "false"
              },
              "mappings": {
                "input": [
                  {
                    "type": "expression",
                    "value": "string.concat(\"Get Invoice request received for: \", $flow.id)",
                    "mapTo": "message"
                  }
                ]
              }
            }
          },
          {
            "id": "randomnumber_3",
            "name": "Random Number",
            "description": "Creates a random number between min and max",
            "activity": {
              "ref": "github.com/sniperkit/snk.fork.retgits-flogo-components/activity/randomnumber",
              "input": {
                "min": "1000",
                "max": "2000"
              }
            }
          },
          {
            "id": "combine_4",
            "name": "Combine",
            "description": "Combines separate parts into a single string",
            "activity": {
              "ref": "github.com/jvanderl/flogo-components/activity/combine",
              "input": {
                "delimiter": "",
                "prefix": "",
                "suffix": "",
                "part1": "",
                "part2": "",
                "part3": "",
                "part4": "",
                "part5": "",
                "part6": "",
                "part7": "",
                "part8": ""
              },
              "mappings": {
                "input": [
                  {
                    "type": "literal",
                    "value": "-",
                    "mapTo": "delimiter"
                  },
                  {
                    "type": "literal",
                    "value": "INV",
                    "mapTo": "part1"
                  },
                  {
                    "type": "assign",
                    "value": "$flow.id",
                    "mapTo": "part2"
                  }
                ]
              }
            }
          },
          {
            "id": "randomnumber_5",
            "name": "Random Number (2)",
            "description": "Creates a random number between min and max",
            "activity": {
              "ref": "github.com/sniperkit/snk.fork.retgits-flogo-components/activity/randomnumber",
              "input": {
                "min": "0",
                "max": "1000"
              }
            }
          },
          {
            "id": "rest_6",
            "name": "Invoke REST Service",
            "description": "Simple REST Activity",
            "activity": {
              "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/rest",
              "input": {
                "method": "GET",
                "uri": "",
                "proxy": "",
                "pathParams": null,
                "queryParams": null,
                "header": null,
                "skipSsl": "false",
                "content": null
              },
              "mappings": {
                "input": [
                  {
                    "type": "object",
                    "value": {
                      "id": "{{$flow.id}}"
                    },
                    "mapTo": "pathParams"
                  },
                  {
                    "type": "assign",
                    "value": "$env[PAYMENTSERVICE]",
                    "mapTo": "uri"
                  }
                ]
              }
            }
          },
          {
            "id": "actreturn_7",
            "name": "Return",
            "description": "Simple Return Activity",
            "activity": {
              "ref": "github.com/TIBCOSoftware/flogo-contrib/activity/actreturn",
              "input": {
                "mappings": [
                  {
                    "mapTo": "response",
                    "type": "object",
                    "value": {
                      "id": "{{$flow.id}}",
                      "ref": "{{$activity[combine_4].result}}",
                      "amount": "{{$activity[randomnumber_3].result}}",
                      "balance": "{{$activity[randomnumber_5].result}}",
                      "expectedPaymentDate": "{{$activity[rest_6].result.expectedDate}}",
                      "currency": "USD"
                    }
                  }
                ]
              }
            }
          }
        ],
        "links": [
          {
            "from": "log_2",
            "to": "randomnumber_3"
          },
          {
            "from": "randomnumber_3",
            "to": "combine_4"
          },
          {
            "from": "combine_4",
            "to": "randomnumber_5"
          },
          {
            "from": "randomnumber_5",
            "to": "rest_6"
          },
          {
            "from": "rest_6",
            "to": "actreturn_7"
          }
        ]
      }
    }
  ]
}