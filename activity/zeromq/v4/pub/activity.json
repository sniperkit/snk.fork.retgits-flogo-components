{
  "name": "ZeroMQ v4 - Publish",
  "version": "0.0.1",
  "title": "Publish ZMQ message",
  "type": "flogo:activity",
  "ref": "github.com/sniperkit/snk.fork.retgits-flogo-components/activity/zeromq/v4/pub",
  "description": "Publish a message to a ZMQ topic (v4.x)",
  "author": "Rosco Pecoltran<sniperkit@protonmail.com>",
  "input":[
    {
      "name": "service",
      "type": "string",
      "required": true,
      "value": "tcp://*:14444"
    },
    {
      "name": "uri",
      "type": "string",
      "required": true,
      "value": "tcp:localhost:5555"
    },
    {
      "name": "topic",
      "type": "string",
      "required": true,
      "value": "zmq.REP",
    },
    {
      "name": "message",
      "type": "string",
      "required": true,
      "value": "testing zmq server for flogo"
    }
  ],
  "output": [
    {
      "name": "output",
      "type": "any"
    }
  ]
}
